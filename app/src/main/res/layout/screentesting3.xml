<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/question_mark_dos"
        android:id="@+id/helps_layout1"
        tools:context=".HelpScreens" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:padding="1dp" >

            <TableRow
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="2dp">
                <ImageView
                    android:id="@+id/help_info111"
                    android:contentDescription="@string/help_info_111"
                    android:layout_width="400dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/how_2_play_icon1"/>
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_margin="1dp"
                android:padding="1dp">
                <ImageView
                    android:id="@+id/help_info6"
                    android:contentDescription="@string/help_logo"
                    android:layout_width="400dp"
                    android:layout_height="140dp"
                    android:src="@drawable/nuruleheader1"
                    android:background="@android:color/transparent"/>
            </TableRow>

            <TableRow
                android:layout_margin="1dp"
                android:padding="1dp">
                <ImageView
                    android:id="@+id/help_info3"
                    android:contentDescription="@string/help_logo"
                    android:layout_width="400dp"
                    android:layout_height="430dp"
                    android:src="@drawable/rulesnuprops3"
                    android:background="@android:color/transparent"/>
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_margin="1dp"
                android:padding="1dp">
                <ImageButton
                    android:id="@+id/e_button2"
                    android:contentDescription="@string/exit_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:src="@drawable/back_2_menu2"
                    android:background="@android:color/transparent"/>
                <ImageButton
                    android:id="@+id/e_button22"
                    android:contentDescription="@string/next_button"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:src="@drawable/nextpage1"
                    android:background="@android:color/transparent"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>