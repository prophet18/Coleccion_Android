<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/van_gogh_starry_night">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:padding="1dp" >

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TableRow
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp" >

            <ImageView
                android:id="@+id/cologo2"
                android:contentDescription="Coleccion Logo"
                android:layout_width="390dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/coleccion_logo_i"
                android:background="@android:color/transparent"/>
        </TableRow>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TableRow
            android:gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp" >

            <TextView
                android:id="@+id/bg_select"
                android:contentDescription="Choose Game Background"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Select Background: "
                android:background="@color/black"/>

            <Spinner
                android:id="@+id/select_bg"
                android:layout_width="200dp"
                android:layout_height="100dp" />

        </TableRow>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TableRow
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp" >

            <ImageView
                android:id="@+id/bg_selected"
                android:layout_width="200dp"
                android:layout_height="100dp" />

        </TableRow>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TableRow
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp" >

            <TextView
                android:id="@+id/time2_select"
                android:contentDescription="Choose Game Duration"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Select Game Length (in seconds): "
                android:background="@color/black"/>

            <Spinner
                android:id="@+id/select_datime"
                android:layout_width="200dp"
                android:layout_height="100dp" />

        </TableRow>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TableRow
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp" >

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp" >

            <Button
                android:id="@+id/returns"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Return to Home "/>


        </TableRow>

    </TableLayout>
</LinearLayout>

