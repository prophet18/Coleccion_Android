<?xml version="1.0" encoding="utf-8"?>

<!-- XML setup and organization of items on the entry screen. -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coleccion_background_p_spiral_1"
    android:id="@+id/es_layout"
    tools:context=".EntryScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/collection_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/coleccion_logo"
            android:scaleType="fitXY"
            android:src="@drawable/coleccion_logo_b"
            app:layout_constraintBottom_toTopOf="@+id/new_game_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.95"
            app:layout_constraintHeight_percent="0.12"/>

        <ImageButton
            android:id="@+id/new_game_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/new_game_button"
            android:scaleType="fitXY"
            android:src="@drawable/new_game_parallelogram"
            app:layout_constraintBottom_toTopOf="@+id/high_score_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/collection_logo"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.15"/>

        <ImageButton
            android:id="@+id/high_score_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/high_score_button"
            android:scaleType="fitXY"
            android:src="@drawable/high_scores_triangle"
            app:layout_constraintBottom_toTopOf="@+id/settings_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_game_button"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.15"/>

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/settings_button"
            android:scaleType="fitXY"
            android:src="@drawable/settings_semicircle"
            app:layout_constraintBottom_toTopOf="@+id/help_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/high_score_button"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.15"/>

        <ImageButton
            android:id="@+id/help_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/help_button"
            android:scaleType="centerInside"
            android:src="@drawable/help_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/exit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_button"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.15"/>

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/exit_button"
            android:scaleType="centerInside"
            android:src="@drawable/exit_pentagon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/help_button"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.15"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
